<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_outline"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mypage_fg_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >

    <TextView
        android:id="@+id/mypage_fg_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="내 정보"
        android:fontFamily="@font/cat"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#44494F"
        android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/mypage_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="5"
            android:background="#44494F"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/mypage_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cat"
            android:hint="닉네임"
            android:textSize="20sp" />

<!--        <TextView-->
<!--            android:id="@+id/userInfoEdit_btn"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="bottom|center"-->
<!--            android:layout_marginStart="4sp"-->
<!--            android:fontFamily="@font/cat"-->
<!--            android:text="회원정보수정 >"-->
<!--            android:textColor="#44494F"-->
<!--            android:textSize="10sp"-->
<!--            android:textStyle="normal" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/top_bottom_outline"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mypage_lv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cat"
                android:hint="닉네임"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cat"
                android:text="님은 현재  " />

            <TextView
                android:id="@+id/mypage_level"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:fontFamily="@font/cat"
                android:text="green"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cat"
                android:text="레벨 입니다." />
        </LinearLayout>

        <Button
            android:id="@+id/level_info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn"
            android:fontFamily="@font/cat"
            android:minWidth="100dip"
            android:minHeight="20dip"
            android:text="레벨별 해택보기"
            android:textSize="12sp" />

        <SeekBar
            android:id="@+id/seekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:max="10"
            android:progress="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/mypage_myplace_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/right_outline"
            android:text="다녀온 곳"
            android:fontFamily="@font/cat"/>

        <Button
            android:id="@+id/mypage_wishplace_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/top_bottom_outline"
            android:text="가고싶은 곳"
            android:fontFamily="@font/cat"/>

    </LinearLayout>


</LinearLayout>
