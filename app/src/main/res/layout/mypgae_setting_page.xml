<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFAC96"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mypage_setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/mypage_setting_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cat"
            android:hint="설정"
            android:textColor="#44494F"
            android:textSize="20sp"
            android:textStyle="bold" />


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@drawable/top_outline"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/mypg_setting_userInfo_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:fontFamily="@font/cat"
                android:text="    내 정보 수정"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mypg_setting_userInfo_setting_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="    >"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bottom_outline"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/mypg_setting_pw_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:fontFamily="@font/cat"
                android:text="    비밀번호 설정"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mypg_setting_pw_setting_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="    >"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@drawable/top_outline"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/mypg_setting_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="12"
                android:fontFamily="@font/cat"
                android:text="    공지사항"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mypg_setting_notice_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="    >"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bottom_outline"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/mypg_setting_faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="13"
                android:fontFamily="@font/cat"
                android:text="    FAQ"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mypg_setting_faq_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="    >"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/top_bottom_outline"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:id="@+id/mypg_setting_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:fontFamily="@font/cat"
            android:text="    버전정보"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mypg_setting_version_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="  1.1.0"
            android:textSize="21sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@drawable/top_outline"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/mypg_setting_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="12"
                android:fontFamily="@font/cat"
                android:text="    이용약관"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mypg_setting_policy_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="    >"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bottom_outline"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/mypg_setting_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:fontFamily="@font/cat"
                android:text="    개인정보이용약관"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mypg_setting_privacy_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="    >"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@drawable/top_outline"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/mypg_setting_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="11"
                android:fontFamily="@font/cat"
                android:text="    로그아웃"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mypg_setting_logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="    >"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bottom_outline"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/mypg_setting_close_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="11"
                android:fontFamily="@font/cat"
                android:text="    회원탈퇴"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mypg_setting_close_account_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="    >"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>