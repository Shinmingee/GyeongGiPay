<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDABB"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/review_lmg_edit_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/review_lmg_edit_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cat"
            android:hint="타이틀여기여기"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <!--        <TextView-->
        <!--            android:id="@+id/textView22"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:fontFamily="@font/cat"-->
        <!--            android:gravity="right"-->
        <!--            android:text="사진추가"-->
        <!--            android:textColor="#004D40"-->
        <!--            android:textSize="18sp"-->
        <!--            android:textStyle="normal" />-->

        <ImageView
            android:id="@+id/review_lmg_edit_add_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|right"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="#DEDABB"
            android:tint="#004D40"
            app:srcCompat="@android:drawable/ic_menu_add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/cat"
            android:text="추가한 사진 : "
            android:textSize="17sp" />

        <TextView
            android:id="@+id/review_lmg_edit_Photo_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="25dp"
            android:fontFamily="sans-serif"
            android:hint="0" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_edit_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">


    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>